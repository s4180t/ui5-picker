<mvc:View
    xmlns:form="sap.ui.layout.form"
    controllerName="picker.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m">
    <Page
        id="page"
        title="{i18n>title}">
        <form:SimpleForm
            id="FormEdit"
            emptySpanL="4"
            editable="true">
            <Label
                id="FormEdit:Date:Label"
                text="{i18n>Date}" />
            <Input
                id="FormEdit:Date:Begda"
                showValueHelp="true"
                valueHelpIconSrc="sap-icon://calendar"
                valueHelpRequest="onVHRequest"
                value="{ path: 'json>/Begda', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short' } }"
                change="onChange" />
            <Input
                id="FormEdit:Date:Endda"
                showValueHelp="true"
                valueHelpIconSrc="sap-icon://calendar"
                valueHelpRequest="onVHRequest"
                value="{ path: 'json>/Endda', type: 'sap.ui.model.type.Date', formatOptions: { style: 'short' } }"
                change="onChange" />
        </form:SimpleForm>
        <form:SimpleForm
            id="FormReadOnly"
            emptySpanL="4"
            editable="false">
            <Label
                id="FormReadOnly:Date:Label"
                text="{i18n>Date}" />
            <Text
                id="FormReadOnly:Date:Begda"
                text="{ path: 'json>/Begda', type: 'sap.ui.model.type.Date' }" />
            <Text
                id="FormReadOnly:Date:Endda"
                text="{ path: 'json>/Endda', type: 'sap.ui.model.type.Date' }" />
        </form:SimpleForm>
    </Page>
</mvc:View>